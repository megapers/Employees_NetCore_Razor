@page "/employees/view/{id}"
@model RazorPagesApp.Pages.Employees.DetailsModel
@{
    var photoPath = "~/images/" + (Model.Employee.Photopath ?? "noimage.jpg");
}

<div class="row justify-content-center m-3">

    @if (Model.Message != null)
    {
        <div class="col-sm-8">
            <div class="alert alert-primary">
                @Model.Message 
            </div>

        </div>
    }
    @*Using ViewComponent*@
    <div class="col-sm-8">
        @*@await Component.InvokeAsync("HeadCount", new {dept = Model.Employee.Department})*@
        <vc:head-count dept="Model.Employee.Department"></vc:head-count>
    </div>


    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Employee ID: @Model.Employee.Id</h4>
                <h4>Employee Name: @Model.Employee.Name</h4>
                <h4>Employee Email: @Model.Employee.Email</h4>
                <h4>Employee Department: @Model.Employee.Department</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-page="index" class="btn btn-primary">Back</a>
                <a asp-page="edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>